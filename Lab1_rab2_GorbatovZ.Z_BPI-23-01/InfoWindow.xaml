<Window x:Class="Lab1_rab2_GorbatovZ.Z_BPI_23_01.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_rab2_GorbatovZ.Z_BPI_23_01"
        mc:Ignorable="d"
        Title="Информация о фигуре" Height="250" Width="600" MinHeight="250" MinWidth="600" MaxHeight="250" MaxWidth="600"  WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="TitleText" Grid.Row="0" FontSize="22" FontWeight="Bold" 
                  Margin="0,0,0,10" TextAlignment="Center"/>

            <TextBlock Name="InfoText" Grid.Row="1" TextWrapping="Wrap" FontSize="20"/>

            <Button Grid.Row="2" Content="Закрыть" Width="100" Height="30" 
               HorizontalAlignment="Center" Margin="0,10,0,0"
               Click="CloseButton_Click"/>
    </Grid>
</Window>
